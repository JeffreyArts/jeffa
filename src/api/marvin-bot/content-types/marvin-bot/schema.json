{
  "kind": "collectionType",
  "collectionName": "marvin_bots",
  "info": {
    "singularName": "marvin-bot",
    "pluralName": "marvin-bots",
    "displayName": "Marvin bot"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "identity": {
      "type": "text"
    },
    "avatar": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "role": {
      "type": "string"
    },
    "accent_color": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    }
  }
}
